<h1><%=t("create_profile_page")%></h1>

<%= form_for @profile, url: {action: "create"} do |f| %>
  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :lastname, class: "col-sm-2 control-label" %>
      <%= f.text_field :lastname, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :firstname, class: "col-sm-2 control-label" %>
      <%= f.text_field :firstname, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :birth_date, class: "col-sm-2 control-label" %>
      <%= f.date_field :birth_date, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :gender, class: "col-sm-2 control-label" %>
      <%= f.select :gender, options_for_select(Profile.gender_attributes_for_select), class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :street, class: "col-sm-2 control-label" %>
      <%= f.text_field :street, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :city, class: "col-sm-2 control-label" %>
      <%= f.text_field :city, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :postcode, class: "col-sm-2 control-label" %>
      <%= f.text_field :postcode, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.label :country, class: "col-sm-2 control-label" %>
      <%= f.text_field :country, class: "col-sm-6" %>
    </div>
    <div class="form-group">
      <%= f.submit "create" %>
    </div>
  </div>
<% end %>
